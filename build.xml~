<?xml version="1.0"?>
<project name="PHPandPHING" default="build">
  <property name="package" value="PHPandPHING" override="true" />

<target name="require.autoload">
   <autoloader autoloaderpath="vendor/autoload.php"/>
</target>

  <target name="phpunit"  depends="require.autoload">
    <phpunit printsummary="true" haltonfailure="true">
      <formatter todir="/home/osiel/repositorios/PHPandPHING/reports/logs" type="xml"/>
      <batchtest>
        <fileset dir="test">
          <include name="*Test.php"/>
        </fileset>
      </batchtest>
      <formatter type="xml" todir="/home/osiel/repositorios/PHPandPHING/reports" outfile="logfile.xml"/>
   </phpunit>
   <phpunitreport infile="/home/osiel/repositorios/PHPandPHING/reports/logfile.xml"
                  styledir="/usr/share/php/data/phing/etc"
                  format="frames"
                  todir="/home/osiel/repositorios/PHPandPHING/reports"/>
  </target>

  <target name="build" depends="phpunit"/>
</project>
